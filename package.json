{
  "name": "@bastian-paredes/version-manager",
  "version": "1.0.1",
  "type": "module",
  "private": false,
  "scripts": {
    "build": "tsc && rimraf ./dist && node ./esbuild.config.js",
    "bump-version": "npm run build && node ./dist/index.cjs bump-version",
    "bump-version:dry-run": "npm run build && node ./dist/index.cjs bump-version --dry-run --ignore-git-changes",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "author": "Basti√°n Paredes",
  "description": "Command-line tool to easily bump versions, handle pre-releases, and create Git tags for both monorepos and standalone packages.",
  "dependencies": {
    "commander": "^14.0.0",
    "execa": "^9.6.0",
    "prompts": "^2.4.2",
    "semver": "^7.7.2",
    "simple-git": "^3.28.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/package-json": "^5.0.0",
    "@types/prompts": "^2.4.9",
    "@types/semver": "^7.7.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.9",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "type-fest": "^4.41.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "version-manager": "dist/index.cjs"
  }
}
